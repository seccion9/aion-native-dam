<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/contenedorMensaje"
    android:background="@color/fondo_card_correo"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearCorreo"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imagenCorreo"
            android:src="@drawable/vector_imagen_correo"
            />
        <LinearLayout
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:layout_weight="0.8"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRemitente"
                    android:textSize="18sp"
                    android:text="Pinterest"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFecha"
                    android:textSize="10sp"
                    android:text="20/05/2025" />
            </LinearLayout>

            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAsuntoCorreo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Ideas de corte de cabello para sergio"
                />
            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCuerpoMensaje"
                android:textSize="10sp"
                android:text="Ver masÂ¿Te interesa este tema? Ideas de corte de pelo"
                />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>