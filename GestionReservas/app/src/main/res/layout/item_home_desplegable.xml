<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvHoraCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_confirmado"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="confirmada"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvCalCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.16" />

        <TextView
            android:id="@+id/tvCalCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_recycler"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="2025-05-27"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvNombreCard"
            app:layout_constraintStart_toEndOf="@id/tvHoraCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.16" />

        <TextView
            android:id="@+id/tvNombreCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_recycler"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="1"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvParticipantesCard"
            app:layout_constraintStart_toEndOf="@id/tvCalCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/tvParticipantesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_recycler"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="cal1"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvTotalCard"
            app:layout_constraintStart_toEndOf="@id/tvNombreCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20" />

        <TextView
            android:id="@+id/tvTotalCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/casilla_pagado"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="pagada"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvParticipantesCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.18" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="6dp"

            android:layout_margin="5dp"
            android:visibility="visible"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTotalCard">

            <LinearLayout
                android:id="@+id/layoutDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@color/grisSuaveFondoDetalles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/tvNombreDetallesSesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Pagado 150€"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTotalPagadoDetallesSesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Restante: 75€"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@color/grisSuaveFondoDetalles"
                        android:id="@+id/linearColumna3detallesSesion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvParticipantesDetallesSesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Zombie Room"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvIdiomaDetallesSesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Español"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMonitorDetallesSesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Monitor 1"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/linearColumna4detallesSesion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@color/grisSuaveFondoDetalles"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvSesionDetalles"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="SESIÓN CLÁSICA 1H"
                        android:textStyle="bold"/>

                    <!-- SEGUNDO HORIZONTAL: ocupa el otro 50% de alto -->
                    <LinearLayout
                        android:id="@+id/linearBotonesColumna4DetallesSesion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal"
                        android:padding="2dp">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/call"
                            android:background="@android:color/transparent"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/btnCallDetallesSesion"
                            />
                        <ImageButton
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/whatsapp"
                            android:background="@android:color/transparent"
                            android:id="@+id/btnWhatsappDetallesSesion"
                            />
                        <TextView
                            android:id="@+id/tvEditar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/boton_experiencia_azul"
                            android:drawableLeft="@drawable/edit_mini"
                            android:drawablePadding="2dp"
                            android:gravity="center"
                            android:onClick="onEditarClick"
                            android:text="Editar"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:padding="3dp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
