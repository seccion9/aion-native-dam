<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearContendor"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/tvTituloEditar"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/tvUsuario"/>
        <EditText
            android:layout_marginTop="4dp"
            android:background="@drawable/edits_editar_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editUsuario"
            android:hint="Juan López"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/tvFecha"/>
        <EditText
            android:layout_marginTop="4dp"
            android:background="@drawable/edits_editar_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editFecha"
            android:hint="2025-04-04 10:00"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/tvTipo"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:background="@drawable/edits_editar_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         >
            <Spinner
                android:entries="@array/comentario_array"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTipoComentario"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/tvDescripcion"/>
        <EditText
            android:layout_marginTop="4dp"
            android:background="@drawable/edits_editar_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editDescripcion"
            android:hint="Diana 1 en mantenimiento"/>
        <TextView
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar"
            android:textSize="16sp"
            android:background="@drawable/boton_aceptar"
            android:text="Guardar"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>