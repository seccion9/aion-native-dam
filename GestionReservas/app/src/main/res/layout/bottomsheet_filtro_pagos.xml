<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textTituloFiltro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar pagos"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Tipo de pago"
        android:paddingTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_spinner_bottom"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinnerTipoPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/flecha_abajo"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:paddingTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_spinner_bottom"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinnerEstadoPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/flecha_abajo" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearBotonesBottomSheet"
        >
        <TextView
            android:layout_marginEnd="10dp"
            android:id="@+id/btnCancelarFiltros"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textStyle="bold"
            android:background="@drawable/boton_cancelar"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/btnAplicarFiltros"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Aplicar"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/boton_aceptar"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>
